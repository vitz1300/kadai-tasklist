<!--サインアップページ-->
<h1>サインアップ</h1>
    <%= form_with(model: @user, local: true) do |f| %>
      
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name %>
      
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email %>
      
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password %>
      
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      
      <%= f.submit 'サインアップ' %>
    <% end %>
    <p>登録ずみユーザーはこちらから <%= link_to 'ログイン', login_path %></p>